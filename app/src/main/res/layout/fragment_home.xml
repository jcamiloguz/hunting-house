<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.home.HomeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_card"
        android:elevation="20dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/ivHomeLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo_main"
            app:layout_constraintBaseline_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tvHomeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_title"
            android:textStyle="bold"
            android:textSize="@dimen/home_title"
            android:textColor="@color/purple_700"
            app:layout_constraintTop_toBottomOf="@+id/ivHomeLogo"/>
        <TextView
            android:id="@+id/tvHomeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_description"
            android:textStyle="bold"
            android:textSize="@dimen/home_description"
            app:layout_constraintTop_toBottomOf="@+id/tvHomeTitle"
            android:justificationMode="inter_word"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>